{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "3.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cabal configure && cabal build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "cabal new-exec BottomUp < ./test/testing.bgl",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "Build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}